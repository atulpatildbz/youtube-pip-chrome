{
  "manifest_version": 3,
  "name": "YouTube Button Adder",
  "version": "1.0",
  "description": "Adds a custom button to YouTube watch pages.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "icon16.png"
  }
}
