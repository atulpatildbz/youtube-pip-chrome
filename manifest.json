{
  "manifest_version": 3,
  "name": "YouTube PiP Mode",
  "version": "1.0",
  "description": "Adds a button to the YouTube watch page to toggle the PIP mode.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "icon16.png"
  }
}
